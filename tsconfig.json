{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "lib": [
            "dom",
            "es6",
            "dom.iterable"
        ],
        "types": [
            "node"
        ],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}